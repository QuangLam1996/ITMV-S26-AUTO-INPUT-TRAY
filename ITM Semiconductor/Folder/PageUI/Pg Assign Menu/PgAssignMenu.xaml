                        </LinearGradientBrush>
                    </Grid.Background>
                    <Label  FontWeight="Bold" Foreground="White" FontSize="20" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="White" Margin="0,0,10,0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> Name Machine
                    </Label>
                </Grid>
                <Grid Grid.Row="1" Margin=" 0 0 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <Border Margin="0,5,5,5" Grid.Column="1" Background="White" BorderBrush="#444444" BorderThickness="2" CornerRadius="10,10,10,10" Grid.Row="0" >
                        <TextBox Name="txbNameMachine" Width="600" Grid.Row="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"  Foreground="#333333" BorderThickness="0" Text="Name Machine" FontFamily="Bahnschrift SemiBold Condensed" FontSize="24"></TextBox>
                    </Border>
