                    </Border.Background>
                </Border>
                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Assign Menu
                </Label>
                <Button Grid.Column="1" x:Name="BtnSave" Width="150" Margin="0 4 40 4" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Folder/PageUI/Icon/save.png" Margin="2"/>
                        <TextBlock VerticalAlignment="Center" Padding="15,0,0,0">Save</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
            <Grid  Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="45"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0 0 0 0">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                            <GradientStop Color="White" Offset="0"/>
