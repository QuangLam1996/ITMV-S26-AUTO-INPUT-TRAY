<Page x:Class="ITM_Semiconductor.PgMechanicalMenu3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ITM_Semiconductor"
      mc:Ignorable="d" 
       d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgMechanicalMenu3">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="#879ec8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Padding="0 20 0 0" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 100 0 0" >
                        
                       



                        <Button x:Name="btSetting1"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                                <TextBlock Padding="10" Text="MES       "  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>




                        <Button x:Name="btSetting2"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                                <TextBlock Padding="10" Text="Barcode "  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>



                        <Button x:Name="btSetting3"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                                <TextBlock Padding="10" Text="Device    "  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>


                        <Button x:Name="btSetting4" Height="60" Width="215" Style="{StaticResource ssButton}" Margin="0 5 5 5" BorderThickness="0" >
                            <StackPanel Orientation="Horizontal">

                                <Image Source="/Folder/PageUI/Icon/button on.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>

                                <TextBlock Padding="10" Text="FTP         " Foreground="Black" Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>


                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0" Margin="0 5 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid Grid.Row="0">
                    <Border CornerRadius=" 10 ">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#879ec0" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                        <Label.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                        </Label.Effect> FTP Server IV3
                    </Label>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                   
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition Height="0.35*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                   
                </Grid>
                <GroupBox Grid.Row="0"  FontSize="18" BorderThickness="1" FontFamily="Arial" FontWeight="SemiBold" Margin="4 0 0 2">
                    <GroupBox.Resources>
                        <Style TargetType="Button" >
                            <Setter Property="Margin" Value="10,5,10,5"/>
                            <Setter Property="FontSize" Value="15"/>
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="2,2,2,2"/>
                            <Setter Property="FontSize" Value="24"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="20"/>
                        </Style>
                    </GroupBox.Resources>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.05*"/>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="0.05*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="0.05*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.05*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="1" Grid.Row="0" Margin="2">
                            <Image Source="/Folder/PageUI/Icon/FTP.png"></Image>
                        </Grid>
                        <TextBox Grid.Column="3" x:Name="txtLogs" FontSize="16" TextWrapping="Wrap" Text="{Binding rxLog}"
          VerticalScrollBarVisibility="Visible"
          VerticalContentAlignment="Top" HorizontalContentAlignment="Left"
          Background="Black" Foreground="White"></TextBox>
                        <Grid Grid.Column="5" Grid.Row="0">
                            <Grid.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                    <Setter Property="FontSize" Value="24" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Margin" Value="0,5,5,5" />
                                    <Setter Property="Background" Value="#6787c0" />
                                    <Setter Property="BorderThickness" Value="0.7"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                </Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="23" />
                                    <Setter Property="FontFamily" Value="Arial"/>
                                    <Setter Property="FontWeight" Value="Normal" />
                                    <Setter Property="Foreground" Value="White"/>

                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="0*"/>
                                <RowDefinition Height="0.9*"/>
                            </Grid.RowDefinitions>
                            
                            <Button Grid.Row="0" Grid.Column="0" x:Name="btSetting">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Folder/PageUI/Icon/setting2.png" Margin="2"/>
                                    <TextBlock VerticalAlignment="Center" Padding="15,0,0,0">Setting</TextBlock>
                                </StackPanel>
                            </Button>
                            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
            

        </Grid>


    </Grid>
</Page>
