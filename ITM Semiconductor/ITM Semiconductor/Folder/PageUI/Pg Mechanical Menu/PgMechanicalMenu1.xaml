<Page x:Class="ITM_Semiconductor.PgMechanicalMenu1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ITM_Semiconductor"
      mc:Ignorable="d" 
       d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgMechanicalMenu1">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="220"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="#BDB76B" />
                    
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="25" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="White"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="#879ec8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 100 0 0" >


                        <Button x:Name="btSetting1"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                                <TextBlock Padding="10" Text="Setting 1"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btSetting2" Height="60" Width="215" Style="{StaticResource ssButton}" Margin="0 5 5 5" >
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                                <Image Source="/Folder/PageUI/Icon/button on.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>

                                <TextBlock Padding="10" Text="Barcode " Foreground="Black" Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>



                        <Button x:Name="btSetting3"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                                <TextBlock Padding="10" Text="Device    "  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        




                        <Button x:Name="btSetting4"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                                <TextBlock Padding="10" Text="Setting 4"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="160"></ColumnDefinition>
                    <ColumnDefinition Width="160"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="#6787c0" />
                        <Setter Property="BorderThickness" Value="0.7"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                    </Style>

                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="23" />
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="White"/>

                    </Style>
                </Grid.Resources>
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label  FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Barcode Setting
                </Label>
                <Button Grid.Column="1" x:Name="BtnSave">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Folder/PageUI/Icon/save.png" Margin="2"/>
                        <TextBlock VerticalAlignment="Center" Padding="15,0,0,0">Save</TextBlock>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2" x:Name="BtnUndo">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="3" Source="/Folder/PageUI/Icon/restore.png"/>
                        <TextBlock   VerticalAlignment="Center" Padding="20,0,0,0" >Undo</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        
                        <Canvas>
                            <Polygon Points="0,20,230,140,0,270" Fill="#879ec8" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                            <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                            <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        </Canvas>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ITM" Style="{StaticResource titleText}"/>
                            <TextBlock Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                            <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                        </StackPanel>
                    </Grid>
                </Border>




                <Grid Grid.Row="1" Margin="4">

                    <Grid.Resources>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Foreground" Value="#dd222222" />
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="FontSize" Value="24" />
                        </Style>
                        <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                            <Setter Property="FontSize" Value="24" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Margin" Value="0,5,5,5" />
                            <Setter Property="Background" Value="#ECECEC" />
                            <Setter Property="BorderThickness" Value="0.7 "/>
                            <Setter Property="BorderBrush" Value="Black"/>

                        </Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="18" />
                            <Setter Property="FontFamily" Value="Arial"/>
                            <Setter Property="FontWeight" Value="Light" />
                            <Setter Property="Foreground" Value="Black"/>

                        </Style>
                    </Grid.Resources>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="550"></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Image Stretch="Fill" Source="/Folder/PageUI/Icon/Scanner.png"></Image>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="45" />
                            </Grid.RowDefinitions>
                            <TextBox Grid.Row="0" Margin="0 0 10 0" x:Name="txtLogs" Text="{Binding rxLog}" Background="Black" Foreground="White"
                             VerticalScrollBarVisibility="Visible"></TextBox>
                            <Button Grid.Row="1" Name="btnLogClear" Margin="2,2,12,0" >
                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Clear</TextBlock>
                            </Button>
                        </Grid>
                        <Grid Grid.Column="2" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Column="0" Grid.Row="0" >
                                <Button x:Name="btnSetting" Grid.Column="0"  Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Margin="3" Source="/Folder/PageUI/Icon/Setting2.png"/>
                                        <TextBlock  VerticalAlignment="Center" Padding="5,0,0,0">Setting Barcode</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <Grid Grid.Column="0" Grid.Row="1">
                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnOpen" Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Folder/PageUI/Icon/open.png" Margin="3"/>
                                        <TextBlock   VerticalAlignment="Center" Padding="2,0,0,0">Open</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="btnClose" Grid.Column="2" Grid.Row="1" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Folder/PageUI/Icon/disconnect.png" Margin="2"/>
                                        <TextBlock   VerticalAlignment="Center" Padding="2,0,0,0">Close</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <Grid Grid.Column="0" Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="2*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label HorizontalContentAlignment="Center" FontSize="16" VerticalContentAlignment="Center">Select Bank</Label>
                                <ComboBox Margin="2,7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Grid.Column="1"  x:Name="cbSelectBank" SelectedValuePath="Content">
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="01">01</ComboBoxItem>
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="02">02</ComboBoxItem>
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="03">03</ComboBoxItem>
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="04">04</ComboBoxItem>
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="05">05</ComboBoxItem>
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="06">06</ComboBoxItem>
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="07">07</ComboBoxItem>
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="08">08</ComboBoxItem>
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="09">09</ComboBoxItem>
                                    <ComboBoxItem HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Tag="10">10</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="0">
                                <Button x:Name="btnReadQrCode"  Grid.Column="0" Grid.Row="0" Margin="2,2,50,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock   VerticalAlignment="Center" Padding="2,0,0,0">Read QR Code</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="1">
                                <Button x:Name="btnTurning" Grid.Column="0" Grid.Row="0" Margin="2,2,50,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock   VerticalAlignment="Center" Padding="2,0,0,0">Turning</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <Grid Grid.Column="1" Grid.Row="2">
                                <Button x:Name="btnForcus" Grid.Column="0" Grid.Row="0" Margin="2,2,50,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock   VerticalAlignment="Center" Padding="2,0,0,0">Forcus</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <Grid Grid.Column="1" Grid.Row="4">
                                <Button x:Name="btnRestore" Grid.Column="0" Grid.Row="0" Margin="2,2,100,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                    <StackPanel Orientation="Horizontal">
                                        <Image Margin="3" Source="/Folder/PageUI/Icon/restore.png"/>
                                        <TextBlock   VerticalAlignment="Center" Padding="20,0,0,0" >Restore</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <Grid Grid.Column="0" Grid.Row="4">
                                <Button x:Name="btnSave" Grid.Column="0" Grid.Row="0" Margin="100,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                    <StackPanel Orientation="Horizontal">
                                        <Image Margin="3" Source="/Folder/PageUI/Icon/save.png"/>
                                        <TextBlock   VerticalAlignment="Center" Padding="20,0,0,0">Save</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            

                        </Grid>
                    </Grid>
                </Grid>




            </Grid>
        </Grid>


    </Grid>
</Page>
