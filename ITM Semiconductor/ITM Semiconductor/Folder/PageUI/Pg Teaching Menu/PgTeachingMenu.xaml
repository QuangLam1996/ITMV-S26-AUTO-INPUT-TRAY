<Page x:Class="ITM_Semiconductor.PgTeachingMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ITM_Semiconductor"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgTeachingMenu">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="220"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="#BDB76B" />
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="25" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="White"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="#879ec8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 100 0 0" >
                        <Button x:Name="btSetting1" Height="60" Width="215" Style="{StaticResource sButton}" Margin="0 5 5 5" >
                            <StackPanel Orientation="Horizontal">

                                <Image Source="/Folder/PageUI/Icon/button on.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>

                                <TextBlock Padding="10" Text="Setting 1" Foreground="Black" Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>




                        <Button x:Name="btSetting2"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                                <TextBlock Padding="10" Text="Setting 2"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>




                        <Button x:Name="btSetting3"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                                <TextBlock Padding="10" Text="Setting 3"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>



                        <Button x:Name="btSetting4"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                <!-- Add an Image control here with the source attribute pointing to your image file -->
                                <Image Source="/Folder/PageUI/Icon/button off.png" VerticalAlignment="Center"  Margin="0 5 0 0" ></Image>
                                <TextBlock Padding="10" Text="Setting 4"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="0.6*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label x:Name="txtMenu" FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Teaching Menu
                </Label>
            </Grid>
            <Grid Grid.Row="1">
                <TabControl  Grid.Column="0" FontSize="15" BorderThickness="1" FontFamily="Arial" FontWeight="SemiBold" Margin="4 0 0 2">
                    <TabItem FontSize="16" Foreground="White" Height="30">
                        <TabItem.Header>
                            <TextBlock Text="Data Position" Foreground="Black" />
                        </TabItem.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="47*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="67*"/>
                                <ColumnDefinition Width="67*"/>
                                <ColumnDefinition Width="67*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="1,1,2,1" Grid.ColumnSpan="2" >
                                <Grid.Resources>

                                    <Style TargetType="{x:Type Label}">
                                        <Setter Property="Foreground" Value="#444444" />
                                        <Setter Property="Padding" Value="5,0" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="FontSize" Value="20" />
                                    </Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                        <Setter Property="FontSize" Value="24" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Margin" Value="0,5,5,5" />
                                        <Setter Property="Background" Value="Gray" />
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>


                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="3*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Label BorderThickness="1" BorderBrush="Black">Position X</Label>
                                </Grid>
                                <Grid Grid.Row="1" Background="LightGray">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" FontSize="15">Curent Pos'</Label>
                                    <Label Grid.Column="0" Grid.Row="1" FontSize="15">Curent Speed</Label>
                                    <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelDark}" x:Name="LbPositionX"  Margin="2,2,2,2" Content="0000"  FontSize="20" ></Label>
                                    <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelDark}" x:Name="LbSpeedX"  Margin="2,2,2,2" Content="0000"  FontSize="20" ></Label>
                                    <Label Grid.Column="2" Grid.Row="0" FontSize="15">mm</Label>
                                    <Label Grid.Column="2" Grid.Row="1" FontSize="15">mm</Label>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="2" Margin="0,1,1,1" >
                                <Grid.Resources>

                                    <Style TargetType="{x:Type Label}">
                                        <Setter Property="Foreground" Value="#444444" />
                                        <Setter Property="Padding" Value="5,0" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="FontSize" Value="20" />
                                    </Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                                        <Setter Property="FontSize" Value="24" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Margin" Value="0,5,5,5" />
                                        <Setter Property="Background" Value="Gray" />
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>


                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="3*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Label BorderThickness="1" BorderBrush="Black">Position Y</Label>
                                </Grid>
                                <Grid Grid.Row="1" Background="LightGray">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" FontSize="15">Curent Pos'</Label>
                                    <Label Grid.Column="0" Grid.Row="1" FontSize="15">Curent Speed</Label>
                                    <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource LabelDark}" x:Name="LbPositionY"  Margin="2,2,2,2" Content="0000"  FontSize="20" ></Label>
                                    <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelDark}" x:Name="LbSpeedY"  Margin="2,2,2,2" Content="0000"  FontSize="20" ></Label>
                                    <Label Grid.Column="2" Grid.Row="0" FontSize="15">mm</Label>
                                    <Label Grid.Column="2" Grid.Row="1" FontSize="15">mm</Label>
                                </Grid>
                            </Grid>

                        </Grid>
                    </TabItem>
                    <TabItem FontSize="16" Foreground="White" Height="30">
                        <TabItem.Header>
                            <TextBlock Text="JOG Position" Foreground="Black" />
                        </TabItem.Header>
                        <Grid>
                            <Grid.Resources>

                                <Style TargetType="{x:Type Label}">
                                    <Setter Property="Foreground" Value="#333333" />
                                    <Setter Property="Padding" Value="1,0" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="FontSize" Value="20" />
                                </Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ssButton}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="VerticalAlignment" Value="Stretch" />
                                    <Setter Property="Background" Value="#EEEEEF" />
                                    <Setter Property="Margin" Value="1,1,1,1" />
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="LightSlateGray"/>
                                    <Setter Property="FontSize" Value="20" />
                                </Style>


                            </Grid.Resources>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                    <ColumnDefinition Width="1.3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Label BorderThickness="1" BorderBrush="Black" Margin="1">Status Axis X</Label>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Margin="1" Style="{StaticResource LabelDark}">0000</Label>
                                    <Label Grid.Column="1" >mm</Label>
                                    <Label Grid.Column="2" Margin="1" Style="{StaticResource LabelDark}">0000</Label>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Margin="2" x:Name="BtServo1" >
                                        <StackPanel Orientation="Horizontal">

                                            <Label FontSize="17" Padding="5 0 0 0 ">Servo ..</Label>
                                        </StackPanel>
                                    </Button>
                                    <Button Grid.Column="1" Margin="2" x:Name="BtBake1" >
                                        <StackPanel Orientation="Horizontal">

                                            <Label FontSize="17" Padding="5 0 0 0 " >Bake ..</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="0">
                                    <Button>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Folder/PageUI/Icon/Home.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">HOME</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Button>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Folder/PageUI/Icon/btup1.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">X [+]</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Label Grid.Column="1" >mm/s</Label>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Label Grid.Column="2" Margin="1" Style="{StaticResource LabelDark}">0000</Label>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Button>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Folder/PageUI/Icon/btdown1.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">X [-]</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                    <ColumnDefinition Width="1.3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                    <RowDefinition Height="1.5*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Label BorderThickness="1" BorderBrush="Black" Margin="1">Status Axis Y</Label>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Margin="1" Style="{StaticResource LabelDark}">0000</Label>
                                    <Label Grid.Column="1" >mm</Label>
                                    <Label Grid.Column="2" Margin="1" Style="{StaticResource LabelDark}">0000</Label>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Margin="2" >
                                        <StackPanel Orientation="Horizontal">

                                            <Label FontSize="17" Padding="5 0 0 0 ">Servo ..</Label>
                                        </StackPanel>
                                    </Button>
                                    <Button Grid.Column="1" Margin="2" >
                                        <StackPanel Orientation="Horizontal">

                                            <Label FontSize="17" Padding="5 0 0 0 ">Bake ..</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="0">
                                    <Button>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Folder/PageUI/Icon/Home.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">HOME</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Button>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Folder/PageUI/Icon/btup1.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">Y[+]</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Label Grid.Column="1" >mm/s</Label>
                                </Grid>
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Label Grid.Column="2" Margin="1" Style="{StaticResource LabelDark}">0000</Label>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Button>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Folder/PageUI/Icon/btdown1.png" Margin="3"></Image>
                                            <Label FontSize="17" Padding="5 0 0 0 ">Y[-]</Label>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>

                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>
            <Grid Grid.Row="2">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Position Data
                </Label>
            </Grid>
            <Grid Grid.Row="3">
                <TabControl  Grid.Column="0" FontSize="15" BorderThickness="1" FontFamily="Arial" FontWeight="SemiBold" Margin="4 0 0 2">
                    <TabItem FontSize="16" Foreground="White" Height="30">
                        <TabItem.Header>
                            <TextBlock Text="Point Jig" Foreground="Black" Width="100"/>
                        </TabItem.Header>
                        <Grid>
                            <Grid.Resources>
                                <Style TargetType="Button" BasedOn="{StaticResource ssButton}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="VerticalAlignment" Value="Stretch" />
                                    <Setter Property="Background" Value="#EEEEEF" />
                                    <Setter Property="Margin" Value="1,1,1,1" />
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="LightSlateGray"/>
                                    <Setter Property="FontSize" Value="20" />
                                </Style>

                                <Style TargetType="{x:Type Label}">
                                    <Setter Property="Foreground" Value="Black" />
                                    <Setter Property="Padding" Value="1,0" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="FontSize" Value="20" />
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.4*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" BorderThickness="2" BorderBrush="LightSlateGray" Margin=" 2 12 0 2">
                                <Grid Grid.Column="0" Name="gridJig" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                   
                                </Grid>
                            </Border>
                            <GroupBox Grid.Column="1" Foreground="Black" BorderBrush="LightSlateGray" VerticalContentAlignment="Center"  Header="Save 1st Point Jig"  FontSize="20" BorderThickness="2" FontFamily="Arial" FontWeight="SemiBold" Margin="0 0 0 0" Padding="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Grid.Row="1"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">Axis X</Label>
                                    <Label Grid.Column="0" Grid.Row="2"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">Axis Y Jig</Label>
                                    <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelDark}" x:Name="LbPosition"  Margin="2,2,2,2" Content="0000"  FontSize="20" ></Label>
                                    <Label Grid.Row="2" Grid.Column="1" Style="{StaticResource LabelDark}" x:Name="LbPositio"  Margin="2,2,2,2" Content="0000"  FontSize="20" ></Label>
                                    <Label Grid.Column="2" Grid.Row="1"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">mm</Label>
                                    <Label Grid.Column="2" Grid.Row="2"  FontSize="18" Foreground="Black" BorderThickness="1" Margin="2 3" Padding="0">mm</Label>
                                    <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" x:Name="bt1stJigSave" Margin="2 3" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="1st Jig Pos'"/>
                                    <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" x:Name="btSavePosJigSave" Margin="2 3" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Auto Create Pos' Jig"/>
                                    <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" x:Name="btModifyPosJig" Margin="2 3" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Modify Pos' Jig"/>
                                </Grid>
                            </GroupBox>


                            <GroupBox Grid.Column="2" Grid.Row="0" Foreground="Black" BorderBrush="LightSlateGray" Grid.RowSpan="2" Header="Move Point Tray" FontSize="20" BorderThickness="2" FontFamily="Arial" FontWeight="SemiBold" Margin="4 0 0 2" Padding="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Button Grid.Row="0"  x:Name="btInTrayRun" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Input Tray"/>
                                    <Button Grid.Row="1" x:Name="btOutTrayRun" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Output Tray"/>
                                    <Button Grid.Row="2" x:Name="bt1stTray_X_Run" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="1st X Tray"/>
                                    <Button Grid.Row="3" x:Name="bt1stTray_Y_Run" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="1st Y Tray"/>
                                    <Button Grid.Row="4" x:Name="btTrayRun" Margin="5" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Center" Content="Pos' Tray"/>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </TabItem>
                </TabControl>

            </Grid>
            <Grid Grid.Row="4">
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> Manual
                </Label>
            </Grid>

