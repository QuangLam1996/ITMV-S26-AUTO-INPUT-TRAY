<Window x:Class="ITM_Semiconductor.WndConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITM_Semiconductor"
        mc:Ignorable="d"
         ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
 Title="Confirm Message" Height="200" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Name="lblMessage" Foreground="Black" FontSize="20"
       HorizontalContentAlignment="Center" FontFamily="Time New Roman" VerticalContentAlignment="Center" FontWeight="Bold">Message</Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="#879ec8" />
                   
                </Style>
            </Grid.Resources>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnYes" Margin="160 0 10 10" Width="100" Height="50" >
                    <StackPanel Orientation="Horizontal">
                        <!--<Image Source="/Folder/PageUI/Icon/checked.png" Height="30"></Image>-->
                        <Label Foreground="White">Yes</Label>
                    </StackPanel>
                   
                </Button>
                <Button x:Name="btnNo" Margin="10 0 10 10" Width="100" Height="50" >
                    <StackPanel Orientation="Horizontal">
                        <!--<Image Source="/Folder/PageUI/Icon/close.png" Height="30"></Image>-->
                        <Label Foreground="White">No</Label>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
